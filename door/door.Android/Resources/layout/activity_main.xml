<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAF5DD"
    android:fitsSystemWindows="true">
    <LinearLayout 
        android:id="@+id/container"
        android:orientation="vertical"
        android:background="#2d2d2d"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/my_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#141414"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

            <ImageView
                android:id="@+id/tv_header_title"
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:scaleType="centerInside"
                android:padding="50dp"
                android:layout_margin="20dp"
                android:layout_gravity="left"
                app:contentInsetLeft="50dp"
                app:contentInsetStart="50dp"
                android:paddingStart="50dp" />
        </androidx.appcompat.widget.Toolbar>

        <ListView
            android:visibility="gone"
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:background="#FAF5DD" />

    </LinearLayout>
    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/ic_button_bg_red">
        <ImageView
            android:id="@+id/lock_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_button_bg_red"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/lock_icon"
                android:paddingTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="3"
                android:scaleType="center"
                android:tint="@android:color/white"
                android:src="@drawable/ic_lock_open" />
            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="2"
                android:textAlignment="center"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="35sp"
                android:text="Front door"/>
            <TextView
                android:id="@+id/last_seen"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="3"
                android:textAlignment="center"
                android:gravity="center"
                android:paddingBottom="25dp"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:text="Last seen:\n00:00 ago"
                android:lines="2"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>